[template test where
  xs :: [String]
  name :: String
  balance :: Integer
]

<html>

<body>
  Hello, this is Igor's templates - [$name]
  [map x <- xs]
    <p>Transaction - [x]</p>
  [map/]

  [if balance < 0]
    <strong>Negative balance!</strong>
  [else]
    <p>Balance - [$balance]</p>
  [if/]
</body>

</html>
